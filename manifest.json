{
  "manifest_version": 2,
  "name": "FB Event Guest List Scraper",
  "version": "1.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html",
    "default_title": "FB Event Guest List Scraper"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/events/*"],
      "js": ["chrome/content.js"]
    }
  ],
  "permissions": [
    "tabs", "storage"
  ],
  "background": {
    "scripts": ["chrome/events.js"]
  }
}